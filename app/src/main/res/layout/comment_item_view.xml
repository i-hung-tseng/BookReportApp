<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <data>
        <variable
            name="comment"
            type="com.example.bookreports.data.book.detailbook.Comment" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_commentUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            bindProfile="@{comment.user.image}"
            android:adjustViewBounds="true"
            android:foregroundGravity="center"
            app:layout_constraintDimensionRatio="1:1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_imageStart"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintWidth_percent=".6"
            app:layout_constraintWidth_default="percent"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="@{comment.comment}"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/image_commentUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_commentUser"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_imageStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".03" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>