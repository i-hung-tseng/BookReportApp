<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.bookreports.utils.MainViewModel" />

        <variable
            name="bookItem"
            type="com.example.bookreports.data.book.BookItem" />

    </data>






    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D1E9E9"
        android:layout_margin="8dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_resultItem"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            bind_itemView="@{bookItem.image}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RounderCorner"/>

        <TextView
            android:id="@+id/tv_resultBookName"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:maxEms="20"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="@{bookItem.bookname}"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_resultItem"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/gray"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:text="@{bookItem.description}"
            android:textSize="22sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/image_resultItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_resultItem" />





    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
