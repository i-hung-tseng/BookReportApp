<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGroundWhite"
        tools:context=".registerinfo.LoginFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_verticalcenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="59dp"
            app:layout_constraintGuide_percent=".5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="貓頭鷹閱讀心得!"
            android:textColor="@color/textColor"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline_verticalcenter"
            app:layout_constraintStart_toStartOf="@+id/guideline_verticalcenter"
            app:layout_constraintTop_toTopOf="@+id/guideline_tv_topic" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="233dp"
            android:layout_height="243dp"
            android:src="@drawable/vector"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horital_center"
            app:layout_constraintEnd_toStartOf="@+id/guideline_verticalcenter"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/guideline_verticalcenter"
            app:layout_constraintTop_toTopOf="@+id/guideline_horital_center" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horital_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent=".5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="6:1"
            android:text="使用現有帳號登入"
            android:textStyle="bold"
            android:background="@drawable/background_buttoncorner"
            app:layout_constraintStart_toStartOf="@+id/guideline_buttonStart"
            app:layout_constraintEnd_toEndOf="@+id/guideline_buttonEnd"
            app:layout_constraintTop_toTopOf="@+id/guideline_loginbtntop" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="6:1"
            android:text="登出"
            android:textStyle="bold"
            android:background="@drawable/background_buttoncorner"
            app:layout_constraintStart_toStartOf="@+id/guideline_buttonStart"
            app:layout_constraintEnd_toEndOf="@+id/guideline_buttonEnd"
            app:layout_constraintTop_toTopOf="@+id/guideline_loginbtntop" />







        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="註冊新帳號"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="6:1"
            android:background="@drawable/background_buttoncorner"
            app:layout_constraintStart_toStartOf="@+id/guideline_buttonStart"
            app:layout_constraintEnd_toEndOf="@+id/guideline_buttonEnd"
            app:layout_constraintTop_toTopOf="@+id/guideline_register_top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_loginbtntop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="583dp"
            app:layout_constraintGuide_percent=".7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_register_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent=".8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent=".20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_buttonEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent=".8" />

        <ProgressBar
            android:id="@+id/pb_logout"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


